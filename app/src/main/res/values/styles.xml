<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">@color/colorGrey</item>


        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/colorPrimary</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:strokeColor">@color/colorBackground</item>
        <item name="android:strokeWidth">100</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:text">Enviar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">0dp</item>

        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/colorAccent</item>

        <item name="android:radius">50dp</item>

    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:strokeColor">@color/colorBackground</item>

            <!-- Hint color and label color in FALSE state -->
            <item name="android:textColorHint">@color/colorAccentDark</item>
            <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
            <item name="colorAccent">@color/colorAccentLight</item>
            <item name="colorControlNormal">@color/colorAccentDark</item>
            <item name="colorControlActivated">@color/colorBackground</item>
    </style>
</resources>
